{
    "$schema": "https://json-schema.org/draft-04/schema#",
    "title": "CustomerContact",
    "type": "object",
    "required": ["customer_id"],
    "properties": {
        "customer_id": { "type": "integer" },
        "first_name": { "type": "string", "maxLength": 1000 },
        "last_name": { "type": "string", "maxLength": 1000 },
        "email": { "type": "string", "maxLength": 1000 },
        "notes": { "type": "string", "maxLength": 7000 },
        "phone": { "type": "string", "maxLength": 1000 },
        "order": { "type": "integer" }
    }
}